-- Ejecutar todos los KPIs
BEGIN
    PKG_KPI_MASTER.PROC_EJECUTAR_TODOS_KPIS;
END;
/

-- Ejecutar solo KPIs de ventas
BEGIN
    PKG_KPI_MASTER.PROC_EJECUTAR_KPIS_VENTAS;
END;
/

-- Verificar estado de tablas
BEGIN
    DBMS_OUTPUT.PUT_LINE(PKG_KPI_MASTER.FN_VERIFICAR_TABLAS_KPI);
END;
/

-- Ver estadísticas
BEGIN
    PKG_KPI_MASTER.PROC_OBTENER_ESTADISTICAS_KPI;
END;
/

-- Ejecutar KPIs individualmente por categoría
BEGIN
    PKG_KPI_VENTAS_COMPRAS.PROC_KPI2_VENTAS;
    PKG_KPI_CLIENTES_ENTREGAS.PROC_KPI6_CLIENTES_RECURRENTES;
    PKG_KPI_INVENTARIO.PROC_KPI4_STOCK_CATEGORIA;
END;
/
